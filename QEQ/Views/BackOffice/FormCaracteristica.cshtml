@using QEQ.Models
@model Caracteristica
@{
    ViewBag.Title = "ABMCARACTERISTICA | Caracteristica";
}
<link rel="stylesheet" type="text/css" href="~/Content/estilo.css" />
<h1>Caracteristica</h1>
@using (Html.BeginForm("GrabarCaracteristica", "BackOffice", new { Accion = @ViewBag.Accion }, FormMethod.Post))
{
    @Html.HiddenFor(x => x.ID)
    <p>Nombre: @Html.TextBoxFor((x => x.Nombre), (object)ViewBag.Enabled) @Html.ValidationMessageFor(x => x.Nombre)</p><br />
    <p>IDCategoria: @Html.DropDownListFor(x => x.IDCategoria, new SelectList(ViewBag.ListaCategorias, "ID", "Nombre") ) @Html.ValidationMessageFor(x => x.IDCategoria)</p><br />
    <p>Pregunta: @Html.TextBoxFor((x => x.Pregunta), (object)ViewBag.Enabled) @Html.ValidationMessageFor(x => x.Pregunta)</p><br />
    if (@ViewBag.Accion == "Ver")
    {
        <input type="submit" value="Enviar" disabled/>
    }
    else
    {
        <input type="submit" value="Enviar"/>
    }    
}

<div align="center">
    <a href=@Url.Action("ABMCaracteristica","BackOffice") class="button" id="menulink">Volver</a>
</div>