<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title QUIEN ES QUIEN</title>
    @using QEQ.Models
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color:#06949b;">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Home", "Index", "Home", new { area = "" },
             new { @class = "navbar-brand", @style = "color: white" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @{
                        if (Session["Usuario"] == null)
                        {
                            <li>@Html.ActionLink("Iniciar Sesión", "LogIn", "Home", null, new { @class = "Menu", @style = "color: white" })</li>
                            <li>@Html.ActionLink("Registrarme", "Registro", "Home", null, new { @class = "Menu", @style = "color: white" })</li>
                        }
                     }
                </ul>
                @{
                <div class="box">
                    @{
                        if (Session["Usuario"] != null)
                        {
                            Usuario User = (Usuario)Session["Usuario"];
                            @Html.Label(User.NombreUsuario, new { @class = "Menu", @style = "color: white" })
                            <div class="lol">
                                @Html.Label(User.Monedas.ToString(), new { @class = "Menu", @style = "color: white" })
                                @Html.ActionLink("Cerrar Sesión", "VerificarLogout", "Home", null, new { @id = "Logout", @class = "Menu", @style = "color: white" })
                            </div>
                            <img class="HomeImagen" src="~/Content/Logo6.png" />
                        }
                    }
                </div>
                }
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

<style>
    .HomeImagen {
        height: 50px;
        width: 50px; 
    }

    .Menu {
        font-family: 'Poppins', sans-serif;
        color: white;
        text-decoration: none; 
    }

    #Logout {
        text-decoration: none;
        /*float: right;
        margin-top: 25px;*/
    }

    #Logout:hover {
        color: #edd015;
    }

    .Menu:hover {
        font-family: 'Poppins', sans-serif;
        color: #edd015;
    }

    .box {
        display: flex;
        float: right;
        text-align: right; 
    }

    .lol * {
        display: block;
    }
</style>